{
  "hosting": [{
    "target": "nexus",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    },
    {
      "source": "/learn",
      "destination": "https://learn.apollonexus.com/"
    }
   ],
    "cleanUrls": true
  },
  {
    "target": "learn",
    "public": "learn/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    } ],
    "cleanUrls": true
  }
  ]
}
